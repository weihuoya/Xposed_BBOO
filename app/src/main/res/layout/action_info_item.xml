<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/action_item_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/action_icon"
        android:contentDescription="@string/app_icon_desc"
        android:paddingTop="6dp"
        android:layout_marginStart="6dp"
        android:paddingBottom="6dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <RelativeLayout
        android:id="@+id/action_info_layout"
        android:layout_toEndOf="@id/action_icon"
        android:layout_toStartOf="@+id/marked_icon"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"
        android:layout_marginStart="6dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/action_name"
            tools:text="Action Name"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="start|bottom"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/action_desc"
            tools:text="Action Description"
            android:textStyle="normal"
            android:textSize="12sp"
            android:gravity="start|center"
            android:layout_alignParentStart="true"
            android:layout_below="@id/action_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/marked_icon"
        android:src="@drawable/marked"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:contentDescription="@string/app_icon_desc"
        android:layout_width="24dp"
        android:layout_height="24dp" />

</RelativeLayout>